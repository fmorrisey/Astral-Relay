# Server
NODE_ENV=production
PORT=3030
HOST=0.0.0.0

# Database
DB_PATH=./data/relay.db

# Workspace
WORKSPACE_PATH=/workspace

# Security
SESSION_SECRET=change-me-to-a-random-64-char-string
SESSION_MAX_AGE=604800000

# Upload limits
MAX_UPLOAD_SIZE=10485760

# Optional: Git sync
GIT_SYNC_ENABLED=false
GIT_BRANCH=main

# Optional: Webhook
WEBHOOK_URL=
WEBHOOK_TIMEOUT=5000

# Logging
LOG_LEVEL=info
