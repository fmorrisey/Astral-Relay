# Server
NODE_ENV=production
PORT=3031
HOST=0.0.0.0

# Database
DB_PATH=./data/relay.db

# Workspace
WORKSPACE_PATH=/workspace

# Security
SESSION_SECRET=change-me-to-a-random-64-char-string
SESSION_MAX_AGE=604800000

# Upload limits
MAX_UPLOAD_SIZE=10485760

# Optional: Git sync
GIT_SYNC_ENABLED=false
GIT_BRANCH=main

# Optional: Webhook
WEBHOOK_URL=
WEBHOOK_TIMEOUT=5000

# Logging
LOG_LEVEL=info

# Rate limiting (defaults used by `src/middleware/rateLimit.js`)
# Format: window may include spaces; wrap in quotes if so.
RATE_LIMIT_GLOBAL_MAX=100
RATE_LIMIT_GLOBAL_WINDOW="15 minutes"
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_AUTH_WINDOW="15 minutes"
RATE_LIMIT_UPLOAD_MAX=20
RATE_LIMIT_UPLOAD_WINDOW="15 minutes"
